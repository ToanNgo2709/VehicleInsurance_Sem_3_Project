
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/Client_LayoutPage.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        <a href="index.html">Home</a>
        <span>Contact</span>
    </div>
</div>

<div class="page">
    <div class="container">
        <div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.28291424918!2d106.69300631445903!3d10.789630161901067!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528cb4ba30aa5%3A0x3a0ddc230888b922!2zMjQgUGhhbiBMacOqbSwgxJBhIEthbywgUXXhuq1uIDEsIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaCwgVmlldG5hbQ!5e0!3m2!1sen!2s!4v1620525546286!5m2!1sen!2s" width="1000" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>

        <div class="row">
            <div class="col-md-3">
                <h2 class="section-title text-left">Address</h2>

                <div class="contact-detail">
                    <address>
                        <p>
                            Kraken Force INC. <br>
                            24 Phan Liem Street, Ho Chi Minh City
                        </p>

                        <p>
                            Phone: +1 823 424 9134
                            KrakenForce@company.com
                        </p>
                    </address>
                </div>
            </div>
            <div class="col-md-9">
                <h2 class="section-title text-left">Contact form</h2>
                <form method="post" action="@Url.Action("AddContact")" class="contact-form">
                    <div class="row">
                        <div class="col-md-4"><input type="text" id="Name" name="Name" placeholder="Your name..."></div>
                        <div class="col-md-4"><input type="text" id="Email" name="Email" placeholder="Email..."></div>
                        <div class="col-md-4"><input type="text" id="Website" name="Website" placeholder="Website..."></div>
                    </div>

                    <textarea id="Message" name="Message" placeholder="Message..."></textarea>

                    <p class="text-right">
                        <input type="submit" value="Send message">
                    </p>
                </form>
            </div>
        </div>
    </div>
</div> <!-- .page -->
