
@{
	ViewBag.Title = "Contact";
	Layout = "~/Views/Shared/Client_LayoutPage.cshtml";
}

<div class="container">
	<div style="margin-left:100px">
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.282982943546!2d106.69300631450193!3d10.789624892312574!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528cb4ba30aa5%3A0x3a0ddc230888b922!2zMjQgUGhhbiBMacOqbSwgxJBhIEthbywgUXXhuq1uIDEsIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1621435005729!5m2!1svi!2s" width="1000" height="600" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
	</div>

	<div class="row">
		<div class="col-md-3">
			<h2 class="section-title text-left">Address</h2>

			<div class="contact-detail">
				<address>
					<p>
						Kraken Force Inc. <br>
						24 Pham Liem Street, Dakao Ward, District 1, HCM City
					</p>

					<p>
						Phone: +84 123 456 789
						krakenforce@company.com
					</p>
				</address>
			</div>
		</div>
		<div class="col-md-9">
			<h2 class="section-title text-left">Contact form</h2>
			<form action="@Url.Action("CreateNewContact")" method="post" class="contact-form">
				<div class="row">
					<div class="col-md-4"><input name="Name" id="Name" type="text" placeholder="Your name..."></div>
					<div class="col-md-4"><input name="Email" id="Email" type="text" placeholder="Email..."></div>
					<div class="col-md-4"><input name="Website" id="Website" type="text" placeholder="Website..."></div>
				</div>

				<textarea name="Message" id="Message" placeholder="Message..."></textarea>

				<p class="text-right">
					<input type="submit" value="Send message">
				</p>
			</form>


		</div>
	</div>
</div>
				
