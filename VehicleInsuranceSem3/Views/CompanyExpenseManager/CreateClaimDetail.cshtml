
@{
    ViewBag.Title = "CreateClaimDetail";
    Layout = "~/Views/Shared/LayOutAdmin.cshtml";
    List<VehicleInsuranceSem3.BLL.ViewModel.CustomerpolicyViewModel> x =  Session["CusAllView"] as List<VehicleInsuranceSem3.BLL.ViewModel.CustomerpolicyViewModel>;
}



<form action="@Url.Action("AddClaimDetail")" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" class="form-control" id="claimnumber" name="claimnumber" aria-describedby="emailHelp" placeholder="claimnumber" value="" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">placeaccident</label>
        <input type="text" class="form-control" id="placeaccident" name="placeaccident" placeholder="" value="" required>
    </div>
  
    <div class="form-group">
        <label for="exampleInputPassword1">Date</label>
        <input type="date" class="form-control" id="dateaccident" name="dateaccident" placeholder="" value="" required>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">insure amount</label>
        <input type="number" class="form-control" id="insuredamount" name="insuredamount" placeholder="" value="" required>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">claim able amount
        </label>
        <input type="number" class="form-control" id="claimableamount" name="claimableamount" placeholder="0" value="" required>
    </div>
   
    <div class="form-group">
        <label for="exampleInputPassword1">customerpolicyid</label>
        <select class="form-select" aria-label="Default select example" id="customerpolicyid" name="customerpolicyid">
            @foreach (var item in x)
            {
                if (item.id != null)
                {
                    <option value="@item.id" selected>@item.customeraddprove</option>
                }
                else
                {
                    <option value="@item.id">@item.customeraddprove</option>
                }
            }

        </select>
    </div>
    <button type="submit" class="btn btn-primary" value="">Submit</button>
    <button type="submit" class="btn btn-primary" value=""><a href="@Url.Action("CLaimDetailManager")" style="color:white">Back</a></button>
</form>


