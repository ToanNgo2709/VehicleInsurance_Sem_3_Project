@model PagedList.IPagedList<VehicleInsuranceSem3.BLL.ViewModel.CompanyexpenseViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "CompanyExpenseManager";
    Layout = "~/Views/Shared/LayOutAdmin.cshtml";
    List<VehicleInsuranceSem3.BLL.ViewModel.ExpensetypeViewModel> sa = Session["ViewAllExpenseType"] as List<VehicleInsuranceSem3.BLL.ViewModel.ExpensetypeViewModel>;
}

<button type="button" class="btn btn-warning"> <a href="@Url.Action("CompanyExpenseViewAll")"> ViewAll </a></button>
<button type="button" class="btn btn-success"> <a href="@Url.Action("CreateCompanyExpense")"> CreateProduct</a></button>

<div class="input-group">
    <form action="@Url.Action("ComPanySearch")" method="post" class="col-12">
        <div class="form-outline">
            <input type="search" id="form1" class="form-control" name="tbSearch" />
            <label class="form-label" for="form1">Search</label>
        </div>
        <button type="submit" class="btn btn-primary" id="button-addon2">
            <i class="fas fa-search"></i>
        </button>
    </form>
</div>
<table class="table table-bordered">

    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Date</th>
            <th scope="col">Amount</th>
            <th scope="col">Type Expense</th>
            <th scope="col">Description</th>


            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
        @if (Session["CompanyExpenseViewAll"] != null)
        {
            var ls = (List<VehicleInsuranceSem3.BLL.ViewModel.CompanyexpenseViewModel>)Session["CompanyExpenseViewAll"];
            int i = 0;
            foreach (var item in Model)
            {

                <tr>
                    <td>@i</td>
                    <td>@item.date</td>
                    <td>@item.amount</td>
                    @if (sa != null)
                    {
                        foreach (var tem in sa)
                        {
                            if (item.expensetypeid == tem.id)
                            {
                                <td tabindex="@item.expensetypeid">@tem.name</td>
                            }

                        }
                    }

                    <td>@item.description</td>



                    <td>


                        <a class="btn-btn-fab" href="@Url.Action("EditCompanyExpense", new { id = item.id})" data-idItem="@item.id"><i class="far fa-edit"> </i>  </a>
                        <a class="btn-btn-fab" data-idItem="@item.id" href="@Url.Action("DeleteCompanyExpense" , new { id = item.id })"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
                i++;
            }
        }



    </tbody>
</table>
<div id='Paging' style="text-align:center">
    @Html.PagedListPager(Model, page => Url.Action("CompanyExpenseManager", new { page, pageSize = Model.PageSize }))
    Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount
</div>




