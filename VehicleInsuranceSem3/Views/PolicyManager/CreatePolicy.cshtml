
@{
    ViewBag.Title = "CreatePolicy";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
    List<VehicleInsuranceSem3.BLL.ViewModel.PolicytypeViewModel> cc = Session["AllPolicyType"] as List<VehicleInsuranceSem3.BLL.ViewModel.PolicytypeViewModel>;
}


<form action="@Url.Action("AddPolicy")" method="post">
    <div class="form-group">
        <input type="text" class="form-control" id="name" name="policynumber" aria-describedby="emailHelp" placeholder="Policy Name" value="" required>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Create Date </label>
        <input type="date" class="form-control" id="policydate" name="policydate" placeholder="" value="" required>
    </div>
    <div class="form-group">
        <input type="number" class="form-control" id="policyduration" name="policyduration" placeholder="Policy Duration" value="" min="1" max="4" required>
    </div>

    @*<div class="form-group">
            <label for="exampleInputPassword1">Active</label>
            <select class="form-select" aria-label="Default select example" id="active" name="active" >
                <option value="active">1</option>

            </select>-
        </div>*@

    <div class="form-group">
        <select class="form-control" aria-label="Default select example" id="policytypeid" name="policytypeid">
            <option selected>Select Policy Type</option>
            @foreach (var item in cc)
            {
                if (item.id != null)
                {
                    <option value="@item.id">@item.name</option>
                }
                else
                {
                    <option value="@item.id">@item.name</option>
                }
            }

        </select>
    </div>
    <div class="form-check">
        <input type="checkbox" name="active" id="active" required />
        @* <input type="checkbox" class="form-check-input" id="isActive" checked>*@
        <label class="form-check-label" for="isActive">Is Active</label>
    </div>



    <button type="submit" class="btn btn-primary" value="">Submit</button>
    <a class="btn btn-warning" href="@Url.Action("PolicyManager")">Back</a>
</form>



