
@{
    ViewBag.Title = "CreatePolicyType";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}


<form action="@Url.Action("AddPolicyType")" method="post">
    <div class="form-group">
        <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp" placeholder="Policy Type Name" value="" required>
    </div>
    <div class="form-group">
        <input type="number" class="form-control" id="name" name="libilityLevel" aria-describedby="emailHelp" placeholder="Liability Level" value="" required>
        
    </div>
    <div class="form-group">    
        <input type="number" class="form-control" id="name" name="price" aria-describedby="emailHelp" placeholder="Price" value="" pattern="[0-9]" required>      
    </div>






    <div class="form-check">
        <input type="checkbox" name="active" id="active" required />
        @*<input type="checkbox" class="form-check-input" id="isActive" checked>*@
        <label class="form-check-label" for="isActive">Is Active</label>
    </div>
   

    <button type="submit" class="btn btn-primary" value="">Submit</button>
    <a class="btn btn-warning" href="@Url.Action("PolicyTypeManager")">Back</a>
</form>

