
@{
    ViewBag.Title = "EditPolicyType";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
    var zx = ViewData["AllPolicyType"] as VehicleInsuranceSem3.BLL.ViewModel.PolicytypeViewModel;
}

<form action="@Url.Action("NewPolicyType")" method="post">
    <input type="text" value="@zx.id" name="id" id="id" hidden />
    <div class="form-group">
        <label for="exampleInputEmail1">Policy Type:</label>
        <input type="text" class="form-control" id="NameProdc" name="name" aria-describedby="emailHelp" placeholder="Name" value="@zx.name">
        
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Liability Level:</label>
        <input type="number" class="form-control" id="NameProdc" name="libilityLevel" aria-describedby="emailHelp" placeholder="Name" value="@zx.libilityLevel" min="0" max="10">
        
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Price:</label>
        <input type="number" class="form-control" id="NameProdc" name="price" aria-describedby="emailHelp" placeholder="Name" value="@zx.price" min="10000" max="99999999999999">
        
    </div>

    <div class="form-check">

        <input type="checkbox" class="form-check-input" id="isActive" checked />
        <label class="form-check-label" for="isActive">Is Active</label>
    </div>
    <input type="text" name="active" id="active" hidden /> 


    <button type="submit" class="btn btn-primary" value="">Submit</button>
    <a class="btn btn-warning" href="@Url.Action("PolicyTypeManager")">Back</a>
</form>


