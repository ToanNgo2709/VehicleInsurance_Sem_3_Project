
@{
    ViewBag.Title = "Createvehicle";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
    List<VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel> x = Session["brandAll"] as List<VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel>;
    List<VehicleInsuranceSem3.BLL.ViewModel.ModelViewModel> xx = Session["modelAll"] as List<VehicleInsuranceSem3.BLL.ViewModel.ModelViewModel>;
}



<form action="@Url.Action("AddVehicle")" method="post">
    <div class="form-group">
        <input type="text" class="form-control" id="ownername" name="ownername" aria-describedby="emailHelp" placeholder="Owner's Name" value="" required>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="address" name="address" placeholder="Address" value="" required>
    </div>

    <div class="form-group">
        <select class="form-control" aria-label="Default select example" id="brandid" name="brandid">
            <option selected>--- Select Brand ---</option>
            @foreach (var item in x)
            {
                if (item.Id != null)
                {
                    <option value="@item.Id">@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }

        </select>
    </div>
    <div class="form-group">
        <select class="form-control" aria-label="Default select example" id="modelid" name="modelid">
            <option selected> -- Select Model</option>
            @foreach (var item in xx)
            {
                if (item.id != null)
                {
                    <option value="@item.id" selected>@item.name</option>
                }
                else
                {
                    <option value="@item.id">@item.name</option>
                }
            }

        </select>
    </div>

    <div class="form-group">
        <input type="text" class="form-control" id="version" name="version" placeholder="Version" value="" required>
    </div>

    <div class="form-group">
        <input type="text" class="form-control" id="framenumber" name="framenumber" placeholder="Frame Number" value="" required>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="eginenumber" name="eginenumber" placeholder="Engine Number" value="" required>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="vehiclenumber" name="vehiclenumber" placeholder="Vehicle Number" value="" required>
    </div>

    <div class="form-group">
        <input type="number" class="form-control" id="vehiclecondition" name="vehiclecondition" placeholder="Vehicle Condition" value="" min="1" max="10" required>
    </div>
    <div class="form-group">
        <input type="number" class="form-control" id="ratebycondition" name="ratebycondition" placeholder="Rate By Condition" value="" min="10" max="9999999" required>
    </div>







    <button type="submit" class="btn btn-primary" value="">Submit</button>
    <a class="btn btn-warning" href="@Url.Action("VehicleInfoManager")">Back</a>
</form>


