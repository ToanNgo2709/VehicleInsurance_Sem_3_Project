@model IEnumerable<VehicleInsuranceSem3.BLL.ViewModel.CustomerPurchaseAmountViewModel>
<div class="container">
    <h3><strong>Customer Purchase Amount</strong></h3>
</div>
<table class="table table-striped" id="customePurchase">
    <thead>
        <tr>
            <th>No.</th>
            <th>Customer Name</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int i = 1;
            foreach (var item in Model)
            {

                <tr>
                    <td>@i</td>
                    <td>@item.CustomerName</td>
                    <td>@item.Amount</td>
                </tr>
                i++;
            };
        }
    </tbody>
</table>

