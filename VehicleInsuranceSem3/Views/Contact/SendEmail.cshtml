@model VehicleInsuranceSem3.BLL.ViewModel.ContactViewModel
@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}

<h2>Send Email To Customer</h2>
@if (Model != null)
{
    <div class="container">
        <form method="post" action="@Url.Action("SendEmailToCustomer")">
            <div class="form-group">
                <label for="cusEmail">Customer Email:</label>
                <input class="form-control" id="cusEmail" name="cusEmail" type="email" value="@Model.Email" />
            </div>
            <div class="form-group">
                <label for="subject">Subject: </label>
                <input class="form-control" id="subject" name="subject" type="text" value="" />
            </div>
            <div class="form-group">
                <label for="message">Message: </label>
                <input class="form-control" id="message" name="message" type="text" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Send Email" />
            </div>
        </form>
    </div>
}


