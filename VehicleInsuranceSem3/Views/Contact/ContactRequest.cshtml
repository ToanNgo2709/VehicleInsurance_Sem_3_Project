@model IEnumerable<VehicleInsuranceSem3.BLL.ViewModel.ContactViewModel>
@{
    ViewBag.Title = "ContactRequest";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}
<h3>Customer Contact</h3>
<hr />
<table class="table table-striped">

    <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Email</th>
            <th scope="col">Message</th>
            <th scope="col">Website</th>
            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
        @{
            int i = 1;
            foreach (var item in Model)
            {

                <tr>
                    <td>@i</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Message</td>
                    <td>@item.Website</td>
                    <td>
                        <a class="btn btn-warning" data-idItem="@item.Id" href="@Url.Action("SendEmail", "Contact", new { id = item.Id })"><i class="fa fa-mail-reply"></i></a>
                    </td>
                </tr>
                i++;
            }
        }



    </tbody>
</table>

