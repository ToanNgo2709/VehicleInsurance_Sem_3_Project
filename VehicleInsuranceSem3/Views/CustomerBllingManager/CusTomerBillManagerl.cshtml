@model PagedList.IPagedList<VehicleInsuranceSem3.BLL.ViewModel.CustomerbillinginfoViewModel>
 @using PagedList.Mvc;
@{
    ViewBag.Title = "CusTomerBillManagerl";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
    List<VehicleInsuranceSem3.BLL.ViewModel.CustomerpolicyViewModel> s = Session["cspAllView"] as List<VehicleInsuranceSem3.BLL.ViewModel.CustomerpolicyViewModel>;
}


<button type="button" class="btn btn-warning"> <a href="@Url.Action("CustomerbillViewAll")"> ViewAll </a></button>
<button type="button" class="btn btn-success"> <a href="@Url.Action("CreateCustomerBill")"> Create CustomerBilling</a></button>

<div class="input-group">
    <form action="@Url.Action("customerSearch")" method="post" class="col-12">
        <div class="form-outline">
            <input type="search" id="form1" class="form-control" name="tbSearch" />
            <label class="form-label" for="form1">Search</label>
        </div>
        <button type="submit" class="btn btn-primary" id="button-addon2">
            <i class="fas fa-search"></i>
        </button>
    </form>
</div>
<table class="table table-bordered">

    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Customer add prove</th>
            <th scope="col">BillName</th>
            <th scope="col">CreateDate  </th>
            <th scope="col">Amount</th>
            <th scope="col">Active</th>
            <th scope="col">CustomerPolicy</th>


            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
        @if (Session["csbAllView"] != null)
        {
            var ls = (List<VehicleInsuranceSem3.BLL.ViewModel.CustomerbillinginfoViewModel>)Session["csbAllView"];
            int i = 0;
            foreach (var item in Model)
            {

        <tr>
            <td>@i</td>
            <td>@item.customeraddprove</td>
            <td>@item.bill_number</td>
            <td>@item.createdate</td>
            <td>@item.amount</td>
            <td>@item.active</td>
            @if (s != null)
            {
                foreach (var tem in s)
                {
                    if (item.customerpolicyid == tem.id)
                    {
                        <td tabindex="@item.customerpolicyid">@tem.customeraddprove</td>
                    }

                }
            }



            <td>


                <a class="btn-btn-fab" href="@Url.Action("EditCustomerBill", new { id = item.id})" data-idItem="@item.id"><i class="far fa-edit"> </i>  </a>
                <a class="btn-btn-fab" data-idItem="@item.id" href="@Url.Action("DeleteCustomerBill" , new { id = item.id })"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
                i++;
            }
        }



    </tbody>
    </table>
<div id='Paging' style="text-align:center">
    @Html.PagedListPager(Model, page => Url.Action("CusTomerBillManagerl", new { page, pageSize = Model.PageSize }))
    Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount
</div>






