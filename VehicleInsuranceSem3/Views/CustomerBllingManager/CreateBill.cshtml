@model VehicleInsuranceSem3.BLL.ViewModel.CustomerpolicyViewModel
@{
    ViewBag.Title = "CreateBill";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}

<form action="@Url.Action("CreateBillForCustomer")" method="post">
    <div class="form-group">
        <input type="text" class="form-control" id="customerPolicyId" name="customerPolicyId" aria-describedby="emailHelp" placeholder="Customer Policy Id" value="@Model.id" required>
    </div>

    <div class="form-group">
        <input type="text" class="form-control" id="customeraddprove" name="customeraddprove" aria-describedby="emailHelp" placeholder="Customer Add Proves" value="Confirmed" required>
    </div>

    <div class="form-group">
        <input type="text" class="form-control" id="bill_number" name="bill_number" placeholder="Bill Number" value="" required>
    </div>
    <div class="form-group">
        <input type="date" class="form-control" id="createDate" name="createDate" placeholder="Create Date" value="" required>
    </div>

    <div class="form-group">
        <input type="number" class="form-control" id="amount" name="amount" placeholder="Amount" value="@Model.TotalPayment" readonly required>
    </div>
    <div class="form-check">
        <input type="checkbox" name="active" id="active" required />
        @*       <input type="checkbox" class="form-check-input" id="isActive" checked>*@
        <label class="form-check-label" for="isActive">Is Active</label>
    </div>

    <button type="submit" class="btn btn-primary" onclick="getActive()" value="">Submit</button>
    <a class="btn btn-warning" href="@Url.Action("CustomerPolicyManager", "CustomerPolicyManager")" style="color:white">Back</a>
</form>

<script>
    function getActive() {
        console.log($('#active').val());
    }

</script>