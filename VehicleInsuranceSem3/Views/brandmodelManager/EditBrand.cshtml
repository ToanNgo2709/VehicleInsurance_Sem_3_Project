
@{
    ViewBag.Title = "EditBrand";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
    var br = ViewData["LisBrandAll"] as VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel;
}

<form action="@Url.Action("NewBrand")" method="post">
    <input type="text" value="@br.Id" name="id" id="id" hidden />
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" class="form-control" id="NameProdc" name="name" aria-describedby="emailHelp" placeholder="Brand Name" value="@br.Name" required>
        
    </div>

    <div class="form-check">

        <input type="checkbox" class="form-check-input" id="isActive" checked="checked"   />
        <label class="form-check-label" for="isActive">Is Active</label>
    </div>
    <input type="text" name="active" id="active"  hidden  />



    <button type="submit" class="btn btn-primary" value="">Submit</button>
    <a class="btn btn-warning" href="@Url.Action("BrandManager")">Back</a>
</form>

