
@{
    ViewBag.Title = "EditModel";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
    List<VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel> svv = Session["LisBrandAll"] as List<VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel>;
    var nv = ViewData["ListAllModel"] as VehicleInsuranceSem3.BLL.ViewModel.ModelViewModel;

}

<form action="@Url.Action("NewModel")" method="post">
    <input type="text" value="@nv.id" name="id" id="id" hidden />

    <div class="form-group">
        <label for="exampleInputEmail1">Model Name:</label>
        <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp" placeholder="name" value="@nv.name">
        
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" >Highest Rate:</label>
        <input type="number" class="form-control" id="username" required name="rate" placeholder="" value="@nv.rate"min="1000" max="9999999999" >
    </div>
 
   


    <div class="form-check">

        <input type="checkbox" class="form-check-input" id="isActive" checked  />
        <label class="form-check-label" for="isActive">Is Active</label>
    </div>
    <input type="text" name="active" id="active" hidden />




    <div class="form-group">
        <label for="exampleInputPassword1">Brand</label>
        <select class="form-control" aria-label="Default select example" id="brandid" name="brandid" tabindex="@nv.brandid">
            @if (svv != null)
            {

                foreach (var item in svv)
                {
                    if (nv.brandid == item.Id)
                    {
                        <option value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            }

        </select>
    </div>
    <button type="submit" class="btn btn-primary" value="">Submit</button>
    <a class="btn btn-warning" href="@Url.Action("ModelManager")" style="color:white">Back</a>
</form>


