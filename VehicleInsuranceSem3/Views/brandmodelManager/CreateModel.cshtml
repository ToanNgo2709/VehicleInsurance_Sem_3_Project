
@{
    ViewBag.Title = "CreateModel";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";

    List<VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel> svv = Session["LisBrandAll"] as List<VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel>;


}


<form action="@Url.Action("AddModel")" method="post">
    <div class="form-group">
        <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp" placeholder="Model Name" value="" required>
    </div>

    <div class="form-group">
        <input type="number" class="form-control" id="rate" name="rate" placeholder="Max Rate" value="" min="1000" max="999999999" required>
    </div>

    @*<div class="form-group">
            <label for="exampleInputPassword1">Active</label>
            <select class="form-select" aria-label="Default select example" id="active" name="active" >
                <option value="active">1</option>

            </select>-
        </div>*@
    <div class="form-group">
        <select class="form-control" aria-label="Default select example" id="brandid" name="brandid">
            @foreach (var item in svv)
            {
                if (item.Id != null)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }

        </select>
    </div>
    <div class="form-check">
        @* <input type="checkbox" class="form-check-input" id="isActive" checked required>*@
        <input type="checkbox" name="active" id="active" required />
        <label class="form-check-label" for="isActive">Is Active</label>
    </div>




    <button type="submit" class="btn btn-success" value="">Submit</button>
    <button type="submit" class="btn btn-primary" value=""><a href="@Url.Action("ModelManager")" style="color:white">Back</a></button>
</form>


