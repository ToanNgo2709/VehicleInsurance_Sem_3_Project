@model PagedList.IPagedList<VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel>
@using PagedList.Mvc;
@{

    ViewBag.Title = "BrandManager";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}

<button type="button" class="btn btn-warning"> <a href="@Url.Action("BrandViewAll")"> ViewAll </a></button>
<button type="button" class="btn btn-success"> <a href="@Url.Action("CreateBrand")"> CreateBrand</a></button>


<div class="input-group">
    <form action="@Url.Action("BrandSearch")" method="post" class="col-12">
        <div class="form-outline">
            <input type="search" id="form1" class="form-control" name="tbSearch" />
            <label class="form-label" for="form1">Search</label>
        </div>
        <button type="submit" class="btn btn-primary" id="button-addon2">
            <i class="fas fa-search"></i>
        </button>
    </form>
</div>
<table class="table table-bordered">

    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Name</th>
            <th scope="col">Active</th>


            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
       @if (Session["LisBrandAll"] != null )

       {


           var ls = (List<VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel>)Session["LisBrandAll"];
           int i = 0;
            foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Name</td>
                    <td>@item.Active</td>

                    <td>
                        <a class="btn-btn-fab" href="@Url.Action("EditBrand", new { id = item.Id })" data-idItem="@item.Id"><i class="far fa-edit"> </i>  </a>
                        <a class="btn-btn-fab" data-idItem="@item.Id" href="@Url.Action("DeleteBrand", new { id = item.Id })"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
                i++;
            }
       }




    </tbody>

</table>
<div id='Paging' style="text-align:center">
    @Html.PagedListPager(Model, page => Url.Action("BrandManager", new { page, pageSize = Model.PageSize }))
    Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount
</div>


