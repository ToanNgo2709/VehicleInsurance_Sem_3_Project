@model PagedList.IPagedList<VehicleInsuranceSem3.BLL.ViewModel.ModelViewModel> 
@using PagedList.Mvc;

@{
    ViewBag.Title = "ModelManager";
    Layout = "~/Views/Shared/LayOutAdmin.cshtml";
    List<VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel> sa = Session["LisBrandAll"] as List<VehicleInsuranceSem3.BLL.ViewModel.BrandViewModel>;


}
<button type="button" class="btn btn-warning"> <a href="@Url.Action("ModelViewAll")"> ViewAll </a></button>
<button type="button" class="btn btn-success"> <a href="@Url.Action("CreateModel")"> CreateModel</a></button>


<div class="input-group">
    <form action="@Url.Action("ModelSearch")" method="post" class="col-12">
        <div class="form-outline">
            <input type="search" id="form1" class="form-control" name="tbSearch" />
            <label class="form-label" for="form1">Search</label>
        </div>
        <button type="submit" class="btn btn-primary" id="button-addon2">
            <i class="fas fa-search"></i>
        </button>
    </form>
</div>
<table class="table table-bordered">

    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Name</th>
            <th scope="col">RateM</th>
            <th scope="col">Brand</th>
            <th scope="col">Active</th>


            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
        @if (Session["ListAllModel"] != null )
        {
            
            var ls = (List<VehicleInsuranceSem3.BLL.ViewModel.ModelViewModel>)Session["ListAllModel"];
            int i = 0;
            foreach (var item in Model)
            { 
                <tr>
                    <td >@i</td>
                    <td>@item.name</td>
                    <td>@item.rate</td>
                    @if (sa != null)
                    {
                        foreach (var tem in sa)
                        {
                            if (item.brandid == tem.id)
                            {
                                <td tabindex="@item.brandid">@tem.name</td>
                            }

                        }

                    }

                    <td>@item.active</td>

                    <td>
                        <a class="btn-btn-fab" href="@Url.Action("EditModel", new { id = item.id})" data-idItem="@item.id"><i class="far fa-edit"> </i>  </a>
                        <a class="btn-btn-fab" data-idItem="@item.id" href="@Url.Action("DeleteModel" , new { id = item.id })"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
                i++;
            }
        }

       

    </tbody>

</table>
<div id='Paging' style="text-align:center">
    @Html.PagedListPager(Model, page => Url.Action("ModelManager", new {  page, pageSize = Model.PageSize }) ) 
    Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount 
</div>
   

