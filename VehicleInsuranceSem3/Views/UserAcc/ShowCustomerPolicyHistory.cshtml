@model IEnumerable<VehicleInsuranceSem3.BLL.ViewModel.CustomerHistoryModelView>
@{
    ViewBag.Title = "ShowCustomerPolicyHistory";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}

<div class="container">
    <h4>Customer Policy of Customer: <strong>@ViewBag.customerName</strong> </h4>
</div>
<div class="container" >
    <table class="table table-striped">
        <thead>
            <tr>
                <th>No.</th>
                <th>Policy Name </th>
                <th>Vehicle Name</th>
                <th>Create Date</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Total Payment</th>
                <th>Detail</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.PolicyName</td>
                        <td>@item.VehicleName</td>
                        <td>@item.CreateDate</td>
                        <td>@item.StartDate</td>
                        <td>@item.EndDate</td>
                        <td>@item.TotalPayment</td>
                        <td> <a class="btn btn-warning" href="@Url.Action("ShowCustomerPolicyDetail", new { customerPolicyId = item.CustomerPolicyId})"><i class="fa fa-info-circle"></i></a> </td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>

